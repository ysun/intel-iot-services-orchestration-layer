//////////////////////////////////////////////////////////////////
// Bars
//////////////////////////////////////////////////////////////////

//----------------------------------------------------------------
// Left Tool Bar
//----------------------------------------------------------------

.hope-left-toolbar {
  background-color: $left-toolbar-bk;
  border-right: 1px solid $left-toolbar-border;
  height: 100%;
}

.hope-left-toolbar > i {
  width: 60px;
  font-size: 32px;
  text-align: center;
  color: $left-toolbar-fg;
  padding: 10px 5px 10px;
}

.hope-left-toolbar .disabled {
  color: $left-toolbar-fg-off;
}

.hope-left-toolbar > i:hover {
  background-color: $left-toolbar-bk-on;
}

//----------------------------------------------------------------
// Nav Bar
//----------------------------------------------------------------

.hope-nav-bar {
  background-color: $nav-bar-bk;
  color: $nav-bar-fg;
  position: relative;
}

.hope-nav-bar a, .hope-nav-bar a:hover {
  text-decoration: none;
}

.hope-nav-bar-sep {
  padding: 3px 16px;
  font-size: 18px;
  color: $fg-3;
}

.hope-nav-bar-app {
  padding-top: 3px;
  font-size: 18px;
  color: $fg-5;
}

.hope-settings {
  position: absolute;
  right: 0;
  top: 0;
  z-index: 1000;
  color: $fg-3;
  height: 200px;
  width: 400px;
  overflow: hidden;
  cursor: pointer;
  pointer-events: none;
  transition: transform .3s ease-in-out;
}
.hope-settings.collapsed {
  transform: translate(0,-140px);
}

.hope-settings-margin-left {
  margin-left: 10px !important;
}

.hope-settings-bg {
  position: absolute;
  right: 0;
  width: 0;
  height: 0;
  border-top: 200px solid rgba(92,100,114,.95);
  border-left: 400px solid transparent;
}

.hope-settings-item {
  pointer-events: auto;
  position: absolute;
}
.hope-settings-item:hover {
  color: $fg-5;
}
.hope-settings-users {
  right: 250px;
  top: 12px;
}
.hope-settings-chpass {
  right: 100px;
  top: 12px;
}
.hope-settings-logout {
  right: 16px;
  top: 12px;
}
.hope-settings-trace {
  right: 16px;
  top: 100px;
}
.hope-settings-cog {
  right: 16px;
  top: 160px;
}


.hope-ide-switcher {
  float: left;
  text-align: center;
  color: $fg-6;
  background-color: $bk-2;
  width: 70px;
  height: 100%;
  cursor: pointer;
}

.hope-ide-switcher:hover {
  background-color: $bk-0;
}


//////////////////////////////////////////////////////////////////////////
// Panel
//////////////////////////////////////////////////////////////////////////

//----------------------------------------------------------------
// Panel - General
//----------------------------------------------------------------

.hope-panel {
  cursor: default;
  color: $fg-3;
  background-color: $panel-bk;
  border: 1px solid $panel-border;
}

.hope-panel .error{
  color: $fg-error;
}

.hope-panel .error:hover{
  color: lighten($fg-error, 10%);
}


.hope-panel-header {
  background-color: $panel-header-bk;
  color: $panel-header-fg;
  height: 22px;
}

.hope-panel-icon {
  margin: 2px 10px 10px;
}
.hope-panel-icon-min {
  color: $panel-header-fg;
  position: absolute;
  top: 4px;
  right: 10px;
}

.hope-panel-icon-min:hover {
  color: $panel-header-fg-on;
}

//----------------------------------------------------------------
// Panel - Library
//----------------------------------------------------------------

// search box
.hope-search-box {
  margin: 5px !important;
}

.hope-search-box .input-group-addon{
  background: $panel-lib-search-bk !important; 
  padding: 1px 1px !important;
}
.hope-search-box .form-control{
  border-right: 0; 
  box-shadow: 0 0 0; 
  border-color: #ccc;
  background: $panel-lib-search-bk;
}
.hope-search-box button{
  border: 0;
  background: $panel-lib-search-bk;
}

.hope-search-box input[type="search"]:focus {
  border-color: alpha($panel-lib-search-bk-on, 0.8);
  box-shadow: 0px 2px 2px alpha($panel-lib-search-bk-on, 0.1) inset, 0 0 10px alpha($panel-lib-search-bk-on, 0.6);
  outline: 0 none;
}

// tabs
.hope-panel-lib-tabs {
  background-color: $panel-lib-tabs-bk;
  color: $panel-lib-tabs-fg;
  margin-top: 2px;
  margin-bottom: 2px;
}

.hope-panel-lib-tab-item {
  text-align: center;
}

.hope-panel-lib-tab-item >div {
  padding: 8px;
}

.hope-panel-lib-tab-item >div:hover {
  color: $panel-lib-tabs-fg-on;
}

.hope-panel-lib-tab-item-addon {
  padding-top: 8px;
  padding-bottom: 8px;
  text-align: center;
}

.hope-panel-lib-tab-item-addon:hover {
  color: $panel-lib-tabs-fg-on;
}


.hope-panel-lib-tabs .on {
  background-color: $panel-lib-tabs-bk-on;
  color: $panel-lib-tabs-fg-on;
}


// hub view
.hope-panel-lib-view {
  background-color: $panel-lib-bk;
  color: $panel-lib-fg;
}

.hope-panel-lib-view-first-level, 
.hope-panel-lib-view-second-level, 
.hope-panel-lib-view-third-level {
  margin-top: 2px;
  padding-top: 5px;
  padding-bottom: 5px;
}
.hope-panel-lib-view-third-level {
  background-color: $panel-lib-view-third-level;
}

.hope-panel-lib-view-third-level:hover {
  background-color: $panel-lib-view-third-level-on;
  color: $panel-lib-fg-on;
}

.hope-panel-lib-view-second-level {
  background-color: $panel-lib-view-second-level;
}
.hope-panel-lib-view-second-level:hover {
  background-color: $panel-lib-view-second-level-on;
  color: $panel-lib-fg-on;
}

.hope-panel-lib-view-first-level {
  background-color: $panel-lib-view-first-level;
}
.hope-panel-lib-view-first-level:hover {
  background-color: $panel-lib-view-first-level-on;
  color: $panel-lib-fg-on;
}

.hope-panel-lib-drag {
  text-align: center;
  border: 1px solid $panel-lib-drag-border;
  border-radius: 6px;
}

.hope-panel-lib-code-edit-icon {
  color: $panel-lib-code-edit-icon
}
.hope-panel-lib-code-edit-icon:hover {
  color: lighten($panel-lib-code-edit-icon, 20%)
}

.hope-panel-lib-menu {
  visibility: hidden;
}
.hope-panel-lib-view-first-level:hover .hope-panel-lib-menu,
.hope-panel-lib-view-second-level:hover .hope-panel-lib-menu,
.hope-panel-lib-view-third-level:hover .hope-panel-lib-menu {
  visibility: visible;
}

//----------------------------------------------------------------
// Panel - Inspector
//----------------------------------------------------------------


.hope-inspector-header {
  background-color: $panel-inspector-bk;
  height: 70px;
}

.hope-inspector-icon {
  position: relative;
  float: left;
  color: $panel-inspector-icon;
  font-size: 36px;
  text-align: center;
  min-width: 50px;
  margin: 6px 6px 0px;
}

.hope-inspector-icon:hover {
  color: $fg-6;
}

.hope-inspector-detail {
  position: relative;
  float: left;
  width: 180px;
}

.hope-inspector-detail-name {
  color: $fg-5;
  background-color: $panel-inspector-bk;
  border: 0;
  font-size: 20px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.hope-inspector-detail-desc {
  color: $fg-1;
  background-color: $panel-inspector-bk;
  border: 0;
  resize: none;
  font-size: 14px;
  font-style: italic;
  line-height: 16px;
  text-overflow: ellipsis;
  overflow: hidden;
}
.hope-inspector-time {
  color: $fg-3;
  background: $bk-4;
  padding: 4px;
}
.hope-inspector-data {
  color: $fg-6;
  background: $bk-0;
  padding: 4px;
}

.node-details {
  background: $panel-inspector-details-bk;
  color: $panel-inspector-details-fg;
  height: 100%;
}
.node-details-tag {
  width: 100%;
  background: $panel-tab-bk-on;
  overflow: auto;
  padding: 8px;
}
.node-details-tag i {
  display: inline-block;
  margin: 2px;
  padding: 2px 6px 2px 6px;
  border: 1px solid $panel-tab-bk-on;
  background: $panel-inspector-details-tag-bk;
  color: $panel-inspector-details-tag-fg;
  font-style: normal;
  font-size: 16px;
}
.node-details-tag i:hover {
  border: 1px solid $panel-inspector-details-tag-border-on;
}
.node-details-binding {
  width: 100%;
  height: 360px;
  font-size: 12px;
  background: $panel-tab-bk-on;
  overflow: auto;
  padding: 12px;
}
.hope-dropdown {
  min-width: 200px;
  border-radius: 16px;
  margin: 12px 0 0 0;
}
.hope-hover-icon-btn:hover {
  color: $fg-6;
}
.hope-graph-grouped {
  stroke-width: 0px;
  fill: $graph-group-fill;
}
.hope-graph-nogroup {
  stroke-width: 1px;
  stroke: $graph-group-fill;
  stroke-dasharray: 4 2;
}
.hope-graph-grouped:hover, .hope-graph-nogroup:hover {
  stroke-width: 2px;
  stroke: $fg-6;
}
.hope-graph-buf-outline {
  stroke-width: 8px;
  stroke: $fg-6;
  fill: none;
  opacity: 0.0;
}
.hope-graph-buf-outline:hover {
  opacity: 0.5;
}
.hope-graph-inner-circle {
  pointer-events: none;
  stroke-width: 0px;
  fill: $bk-0;
}
.hope-graph-passive-circle {
  fill: $graph-port-fill;
}
.hope-graph-passive-circle:hover {
  stroke-width: 2px;
  stroke: $fg-6;
}
.hope-graph-default-value {
  position: absolute;
  pointer-events: fill;
  font-size: 12px;
  font-style: italic;
  text-overflow: ellipsis;
  padding-left: 4px;
  overflow: hidden;
  background: $bk-3;
  border: 0;
  border-radius: 3px;
}

.border-bottom {
  border-bottom: 1px solid $bk-0;
}
.padding-left {
  padding-left: 6px;
}
.margin-top {
  margin-top: 8px;
}
.z-index-top {
  z-index: 99;
}
.match-parent {
  height: 100%;
  width: 100%;
}

.hope-panel-details-row {
  margin-top: 2px;
  padding-top: 5px;
  padding-bottom: 5px;
}

.hope-inspector-detail-field {
  background: $bk-5;
  height: 20px;
  width: 100%;
  padding-left: 3px;
  border: 1px solid $fg-1;
  border-radius: 3px;
}

.hope-input-highlighted {
  background: $bk-0;
  border-color: rgba(255, 0, 0, 0.8) !important;
  box-shadow: insect 0 2px 2px rgba(0,0,0,0.075), 0 0 8px rgb(255,0,0) !important;
}

.hope-note {
  position: relative;
  background: $bk-5;
  margin: 0 6px 6px 6px;
}
.hope-note:before {
  content: "";
  position: absolute;
  bottom: 0;
  right: 0;
  background: $bk-3;
  border: solid 8px;
  border-color: transparent $panel-inspector-details-bk $panel-inspector-details-bk transparent;
  z-index: 100;
}
.hope-panel-details-note-row {
  padding-top: 2px;
  padding-bottom: 4px;
  padding-left: 6px;
}
.hope-panel-details-note-row:not(.disabled):hover {
  color: $fg-6;
  cursor: pointer;
}

.hope-tag-group {
  margin: 6px;
}
.hope-tag-box {
  height: 34px;
  border: 1px solid $fg-3;
  border-radius: 8px;
  margin: 14px;
  text-align: center;
}

.hope-tbl {
  width: 100%;
}
.hope-tbl th {
  text-align: center;
}
.hope-tbl-row-val, .hope-tbl-row-key {
  width: 95%;
  padding-left: 3px;
  background-color: #272727;
  border: 1px solid #3d3d3d;
}

textarea:focus,
input[type="text"]:focus {
  border-color: rgba(255, 153, 0, 0.8);
  outline: 0;
  outline: thin dotted \9;
  box-shadow: insect 0 1px 1px rgba(0,0,0,0.075), 0 0 8px rgb(255,153,0);
  transition: border linear 0.2s, box-shadow linear 0.2s;
}

//////////////////////////////////////////////////////////////////////////
// Tabs
//////////////////////////////////////////////////////////////////////////

.hope-tabs-navigation {
  background-color: $panel-tab-bk;
  color: $panel-tab-fg;
}

.hope-tabs-item-list {
  display: table;
  list-style: none;
  padding: 0;
  margin: 0;
}

.hope-tabs-item {
  float: left;
  color: $panel-tab-fg;
  min-width: 60px;
  padding: 5px 6px 5px;
  text-align: center;
  cursor: default;
}
.hope-tabs-item a {
  text-decoration: none;
  display: block;
  color: $panel-tab-fg;
}
.hope-tabs-item.active a {
  color: $panel-tab-fg-on;
}
.hope-tabs-item.active {
  background: $panel-tab-bk-on;
}

//////////////////////////////////////////////////////////////////////////
// SVG Graph
//////////////////////////////////////////////////////////////////////////

//----------------------------------------------------------------
// General
//----------------------------------------------------------------

.hope-graph-background {
  background-color: $graph-bk;
}

.hope-graph, .hope-graph-darken {
  stroke-width: 0px;
  position: absolute;
  top: 0;
  left: 0;
}

.hope-graph {
  fill: $graph-fill;
  stroke: $graph-stroke;
  cursor: default;
}

.hope-graph-darken {
  fill: $graph-fill-off;
  stroke: $graph-stroke-off;
}

.hope-graph-selected {
  fill: $graph-fill-on;
  stroke: $graph-stroke-on;
}


//----------------------------------------------------------------
// Fonts
//----------------------------------------------------------------

text {
  stroke: none;
}

.hope-graph-in-port, .hope-graph-out-port, .hope-graph-extract, .hope-graph-tag, .hope-graph-port-default {
  font-family: Monaco, 'Ubuntu Mono', Consolas, monospace;
  font-size: 12px;
}

.hope-graph-icon, .hope-inspector-icon {
  font-family: FontAwesome, Monaco, 'Ubuntu Mono', Consolas, monospace;
  text-anchor: middle;
}

.hope-graph-icon-btn {
  font-family: FontAwesome, Monaco, 'Ubuntu Mono', Consolas, monospace;
  cursor: default;
  fill: $fg-3;
}

.hope-graph-icon-btn:hover {
  fill: $fg-6;
}

.hope-graph-out-port text {
  text-anchor: end;
}

.hope-binding-text {
  text-anchor: middle;
  font-size: 13px;
}

//----------------------------------------------------------------
// Shapes
//----------------------------------------------------------------

.hope-graph-in-line, .hope-graph-edge, .hope-graph-edge-preview {
  stroke-width: 2px;
  fill: none;
}

.hope-graph-in-line {
  stroke: $graph-stroke;
}

.hope-graph-edge-preview {
  stroke: $graph-edge-preview;
 }

.hope-graph-dash {
  stroke-dasharray: 4 2;
}

.hope-graph-edge:hover {
  stroke-width: 5px;
  stroke: $fg-5;
}

.hope-graph-edge.hope-graph-selected {
  stroke: $fg-6;
}

@keyframes edge-heartbeats {
  0% { stroke-width: 5; }
  25% { stroke-width: 10; }
  50% { stroke-width: 5; }
  75% { stroke-width: 10; }
  100% { stroke-width: 5; }
}

.hope-graph-edge.animated {
  stroke-linecap: round;
  stroke: $fg-6;
  animation: edge-heartbeats 2s linear;
}

@keyframes node-heartbeats {
  0% { fill: $bk-5; }
  50% { fill: $fg-3; }
  100% { fill: $bk-5; }
}

.hope-graph-node-shadow {
  animation: node-heartbeats 2s linear;
  stroke-width: 0px;
}

.hope-graph-port-circle {
  fill: $graph-port-fill;
  stroke-width: 0px;
}

.hope-graph-port-circle:hover, .hope-graph-binding-circle:hover {
  fill: $graph-port-fill-on;
}

.hope-graph-binding-circle {
  fill: $graph-binding-fill;
  stroke: $graph-binding-stroke;
  stroke-width: 1px;
}

.hope-graph .hope-graph-extract rect {
  stroke-width: 1px;
  fill: $graph-extract-fill;
}

.hope-graph-darken .hope-graph-extract rect {
  stroke-width: 1px;
  fill: $graph-extract-fill-off;
}

.hope-graph-darken .hope-graph-selected .hope-graph-extract rect {
  fill: $graph-extract-fill;
}

.hope-graph-node-title-bar {
  fill: $graph-node-title-fill;
}


.hope-graph-port-text {
  fill: $graph-port-text;
}
.hope-graph-port-text:hover {
  fill: $fg-6;
}

.hope-graph-extract text {
  fill: $graph-extract-text;
  text-anchor: middle;
}

.hope-graph-port-default {
  fill: $fg-6;
  font-size: 9px;
  text-anchor: end;
}

.hope-graph-group {
  stroke-width: 0px;
  fill: $graph-group-fill;
}

.hope-graph-tag {
  fill: $graph-tag-fill;
}

@keyframes blink {
  0% {
  	fill: $graph-port-blink-a;
  	stroke: $graph-port-blink-a;
  }
  50% {
  	fill: $graph-port-blink-b;
  	stroke: $graph-port-blink-b;
  }
}
.hope-graph-blink {
  animation: blink 0.5s ease-in-out infinite;
}

.directional-icon {
  text-anchor: middle;
}
.directional-icon:hover {
  cursor: default;
}

//////////////////////////////////////////////////////////////////
// Addons
//////////////////////////////////////////////////////////////////
//----------------------------------------------------------------
// Palette
//----------------------------------------------------------------
.hope-color-palette i {
  padding-left: 2px;
  padding-right: 2px;
}
.hope-color-palette {
  background-color: $palette-bk;
  border: 1px solid $palette-border;
  border-radius: 6px;
}

//////////////////////////////////////////////////////////////////
// Opened file tabs
//////////////////////////////////////////////////////////////////

.hope-ftabs-wrapper {
  float: left;
  background-color: $bk-4;
  height: 100%;
  width: 100%;
}
.hope-ftabs {
  list-style: none; 
  margin: 0;
  padding: 0;
  height: 100%;
  width: 100%;
  overflow: hidden;
}
.hope-ftabs li { 
  float: left;
  height: 24px;
  padding: 0 6px;
  text-align: center;
  text-decoration: none;
  font-style: normal;
  color: $bk-0;
  background: $fg-2;
  border-top-left-radius: 8px;
  border-top-right-radius: 8px;
  cursor: pointer;
}
.hope-ftabs-name {
  display: inline-block;
  white-space: nowrap;
  min-width: 30px;
}
.hope-ftabs li.active { 
  background: $fg-6;
}
.hope-ftabs li:not(.active):hover {
  background: $fg-4;
}
.hope-ftabs-btn:hover {
  color: $1;
}

//////////////////////////////////////////////////////////////////
// Open Graph/UI Dialog 
//////////////////////////////////////////////////////////////////
.hope-open-dialog-list {
  height: 360px;
  overflow: auto;
}
.hope-open-dialog-item {
  line-height: 18px;
  width: 120px;
  height: 60px;
  float: left;
  font-size: 16px;
  margin: 10px;
  border-radius: 5px;
  border: 2px solid black;
  background-color: hsl(190, 90%, 45%);
}
.hope-open-dialog-item:hover {
  border: 2px solid yellow;
}
.hope-open-dialog-item.selected {
  background-color: green;
}

//////////////////////////////////////////////////////////////////
// App manager
//////////////////////////////////////////////////////////////////
.hope-app-manager, .hope-app-home {
  background-color: #e8e8e8;
  height: 100%;
}
.hope-app-mgr-toolbar, .hope-app-home-toolbar {
  background-color: white;
}
.hope-app {
  line-height: 18px;
  font-size: 20px;
  float: left;
  width: 200px;
  height: 100px;
  margin: 20px 20px 20px 0;
  border: 2px solid black;
  border-radius: 8px;
  background-color: #f7f7f7;
  position: relative;
}
.hope-app:hover {
  background-color: $fg-4;
  border: 2px solid #00BAFF;
}
.hope-app.add-new {
  background-color: $fg-4;
  color: $bk-6;
  border: 0;
}
.hope-app.add-new:hover {
  background-color: $fg-2;
}
.hope-app-trash {
  position: absolute;
  right: 8px;
  top: 8px;
  color: #999;
  visibility: hidden;
}
.hope-app:hover .hope-app-trash {
  visibility: visible;
}
.hope-app-trash:hover {
  color: red;
}
.hope-app-mgr-sort-dropdown {
  margin: 5px !important;
}
.hope-app-mgr-body {
  padding: 0 60px;
}
.hope-app-mgr-title-bar {
  border-bottom: 1px solid #ccc;
  padding: 10px 8px;
  position: relative;
}
.hope-app-mgr-title, .hope-app-home-title {
  font-size: 24px;
}
.hope-button {
  display: inline-block;
  border: 2px solid #00BAFF;
  border-radius: 8px;
  width: 120px;
  color: #00BAFF;
  text-align: center;
  cursor: pointer;
  position: absolute;
  right: 0;
  bottom: 8px;
}
.hope-button:hover {
  background-color: #efefef;
}
.hope-button i {
  padding: 6px;
}
.hope-app-mgr-list {
  list-style: none;
  overflow: auto;
  padding: 10px 0 0 0;
}

// App Home
.hope-app-home-title-bar {
  border-bottom: 1px solid #ccc;
  margin: 30px 20px 0;
  position: relative;
}
.hope-app-home-app-dropdown {
  margin: 8px 0 8px 60px;
  font-size: 24px;
}
.hope-app-home-app-dropdown .btn:first-child:not(.dropdown-toggle) {
